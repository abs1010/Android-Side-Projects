<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.game.types.TrucoScoreActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="32dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btPTwoPlus12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 12"
            app:layout_constraintEnd_toEndOf="@+id/btPTwoPlus9"
            app:layout_constraintStart_toStartOf="@+id/btPTwoPlus9"
            app:layout_constraintTop_toBottomOf="@+id/btPTwoPlus9" />

        <Button
            android:id="@+id/btPTwoPlus9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 9"
            app:layout_constraintBottom_toTopOf="@+id/btPTwoPlus12"
            app:layout_constraintEnd_toEndOf="@+id/btPTwoPlus6"
            app:layout_constraintStart_toStartOf="@+id/btPTwoPlus6"
            app:layout_constraintTop_toBottomOf="@+id/btPTwoPlus6" />

        <Button
            android:id="@+id/btPTwoPlus6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 6"
            app:layout_constraintBottom_toTopOf="@+id/btPTwoPlus9"
            app:layout_constraintEnd_toEndOf="@+id/btPTwoPlus3"
            app:layout_constraintStart_toStartOf="@+id/btPTwoPlus3"
            app:layout_constraintTop_toBottomOf="@+id/btPTwoPlus3" />

        <Button
            android:id="@+id/btPOnePlus9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 9"
            app:layout_constraintBottom_toTopOf="@+id/btPOnePlus12"
            app:layout_constraintEnd_toEndOf="@+id/btPOnePlus6"
            app:layout_constraintStart_toStartOf="@+id/btPOnePlus6"
            app:layout_constraintTop_toBottomOf="@+id/btPOnePlus6" />

        <Button
            android:id="@+id/btPOnePlus12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 12"
            app:layout_constraintEnd_toEndOf="@+id/btPOnePlus9"
            app:layout_constraintStart_toStartOf="@+id/btPOnePlus9"
            app:layout_constraintTop_toBottomOf="@+id/btPOnePlus9" />

        <Button
            android:id="@+id/btPOnePlus3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 3"
            app:layout_constraintBottom_toTopOf="@+id/btPOnePlus6"
            app:layout_constraintEnd_toEndOf="@+id/btPOnePlus1"
            app:layout_constraintStart_toStartOf="@+id/btPOnePlus1"
            app:layout_constraintTop_toBottomOf="@+id/btPOnePlus1" />

        <Button
            android:id="@+id/btPOnePlus6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 6"
            app:layout_constraintBottom_toTopOf="@+id/btPOnePlus9"
            app:layout_constraintEnd_toEndOf="@+id/btPOnePlus3"
            app:layout_constraintStart_toStartOf="@+id/btPOnePlus3"
            app:layout_constraintTop_toBottomOf="@+id/btPOnePlus3" />

        <Button
            android:id="@+id/btPTwoMinus1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E40808"
            android:text="- 1"
            app:layout_constraintBottom_toTopOf="@+id/btPTwoPlus1"
            app:layout_constraintEnd_toEndOf="@+id/playerTwoPlacar"
            app:layout_constraintStart_toStartOf="@+id/playerTwoPlacar"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayerTwoName"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/btPOneMinus1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E40808"
            android:text="-1"
            app:layout_constraintBottom_toTopOf="@+id/btPOnePlus1"
            app:layout_constraintEnd_toEndOf="@+id/playerOnePlacar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/playerOnePlacar"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayerOneName"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/btPOnePlus1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 1"
            app:layout_constraintBottom_toTopOf="@+id/btPOnePlus3"
            app:layout_constraintEnd_toEndOf="@+id/btPOneMinus1"
            app:layout_constraintStart_toStartOf="@+id/btPOneMinus1"
            app:layout_constraintTop_toBottomOf="@+id/btPOneMinus1" />

        <Button
            android:id="@+id/btFinishMatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/terminar_a_partida"
            app:layout_constraintEnd_toEndOf="@+id/playerTwoPlacar"
            app:layout_constraintStart_toStartOf="@+id/playerOnePlacar"
            app:layout_constraintTop_toBottomOf="@+id/btPOnePlus12" />

        <Button
            android:id="@+id/btRevenge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/revanche"
            app:layout_constraintEnd_toEndOf="@+id/btFinishMatch"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btFinishMatch"
            app:layout_constraintTop_toBottomOf="@+id/btFinishMatch" />

        <Button
            android:id="@+id/btShareWhatsApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/compartilhar_no_whatsapp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btRevenge"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btRevenge"
            app:layout_constraintTop_toBottomOf="@+id/btRevenge" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/placar_da_geral"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.056" />

        <TextView
            android:id="@+id/tvPlayerOneName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/casa"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/playerOnePlacar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/playerOnePlacar"
            app:layout_constraintTop_toBottomOf="@+id/playerOnePlacar" />

        <TextView
            android:id="@+id/tvPlayerTwoName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/visitante"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/playerTwoPlacar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/playerTwoPlacar"
            app:layout_constraintTop_toBottomOf="@+id/playerTwoPlacar" />

        <TextView
            android:id="@+id/playerOnePlacar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="72sp"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="X"
            android:textAlignment="center"
            android:textSize="72sp"
            app:layout_constraintEnd_toStartOf="@+id/playerTwoPlacar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/playerOnePlacar"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/playerTwoPlacar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="72sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <Button
            android:id="@+id/btPTwoPlus1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 1"
            app:layout_constraintBottom_toTopOf="@+id/btPTwoPlus3"
            app:layout_constraintEnd_toEndOf="@+id/btPTwoMinus1"
            app:layout_constraintStart_toStartOf="@+id/btPTwoMinus1"
            app:layout_constraintTop_toBottomOf="@+id/btPTwoMinus1" />

        <Button
            android:id="@+id/btPTwoPlus3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="+ 3"
            app:layout_constraintBottom_toTopOf="@+id/btPTwoPlus6"
            app:layout_constraintEnd_toEndOf="@+id/btPTwoPlus1"
            app:layout_constraintStart_toStartOf="@+id/btPTwoPlus1"
            app:layout_constraintTop_toBottomOf="@+id/btPTwoPlus1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>