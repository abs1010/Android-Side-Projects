<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alansilva.placardageral">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlacarDaGeral">
        <activity
            android:name=".presentation.game.types.FootballScoreActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.game.types.BasketScoreActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.game.types.TrucoScoreActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.game.GameType"
            android:exported="false" />
        <activity
            android:name=".presentation.player.PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>